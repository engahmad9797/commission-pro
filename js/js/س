// ØªØºÙŠÙŠØ± Ø­Ø¬Ù… ØµÙˆØ±Ø©
async function resizeImage(inputPath, outputPath, width, height) {
  try {
    await sharp(inputPath).resize(width, height).toFile(outputPath);
    log(`ğŸ–¼ï¸ ØªÙ… ØªØºÙŠÙŠØ± Ø­Ø¬Ù… Ø§Ù„ØµÙˆØ±Ø©: ${outputPath}`);
    return outputPath;
  } catch (err) {
    log(`Ø®Ø·Ø£ ÙÙŠ ØªØºÙŠÙŠØ± Ø­Ø¬Ù… Ø§Ù„ØµÙˆØ±Ø©: ${err}`, 'error');
    return null;
  }
}

// Ø¶ØºØ· ØµÙˆØ±Ø© JPG/PNG
async function compressImage(inputPath, outputPath, quality = 70) {
  try {
    await sharp(inputPath).jpeg({ quality }).toFile(outputPath);
    log(`ğŸ“‰ ØªÙ… Ø¶ØºØ· Ø§Ù„ØµÙˆØ±Ø©: ${outputPath}`);
    return outputPath;
  } catch (err) {
    log(`Ø®Ø·Ø£ ÙÙŠ Ø¶ØºØ· Ø§Ù„ØµÙˆØ±Ø©: ${err}`, 'error');
    return null;
  }
}

